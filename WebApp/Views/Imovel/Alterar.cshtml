@model WebApp.Models.ImovelViewModel

@{ ViewData["Title"] = "Alterar";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Alterar</h1>

<h4>@Model.Descricao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Alterar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EnderencoId" />
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeDeQuartos" class="control-label"></label>
                <input asp-for="QuantidadeDeQuartos" class="form-control" />
                <span asp-validation-for="QuantidadeDeQuartos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorAluguel" class="control-label"></label>
                <input asp-for="ValorAluguel" class="form-control" />
                <span asp-validation-for="ValorAluguel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Tipo Imovel:&nbsp </label>
                <select asp-for="TipoImovel" asp-items="Html.GetEnumSelectList<TipoImovel>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
